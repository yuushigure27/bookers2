<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'users/userinfo', user: @book.user %>
    <h1>New book</h1>
    <%= render 'form', book: @new_book %>
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-striped">
          <tbody>
            <tr>
              <td>
               <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image, size: "80x80" %><br>
                <%= @book.user.name %>
               <% end %>
              </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>

            <% if @user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
            </tr>
            </tbody>
    </table>
  </div>
    </div>
  
</div>
