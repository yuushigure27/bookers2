<%= form_with model: book, local:true do |f| %>
  <div class="form-group">
    <h4>Title</h4>
      <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <h4>Opinion</h4>
    <%= f.text_area :body %>
  </div>
  <div class="actions text-success">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>