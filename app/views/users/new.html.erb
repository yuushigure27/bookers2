<h1>User info</h1>

<h1>New Book</h1>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
	
  <%= f.submit 'Create Book' %>
<% end %>
  
<h1>Books detail</h1>
<% @books.each do |book| %>
  <p>title</p>
  <span><%= book.title %></span>
  <p>opinion</p>
  <span><%= book.body %></span>
<% end %>