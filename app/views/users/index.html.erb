<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: current_user %>
      <h1>New book</h1>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
         <tbody>
          <tr>
            <td><%= image_tag user.profile_image, size: "80x80" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
           </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
  
    

